<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KieshStockExchange.Views.OtherViews.TopNavBarView">
    <Grid HeightRequest="100">
        <!-- Decorative Path Background -->
        <Path Style="{StaticResource MainPath}" />

        <Grid BackgroundColor="Transparent" 
              Padding="10" Margin="0,0,0,0"
              ColumnDefinitions="Auto, Auto, *, Auto, Auto, Auto, Auto, Auto"
              ColumnSpacing="10">

            <!-- Page Logo -->
            <Image Style="{StaticResource LogoImage}" Grid.Column="0"/>
            
            <!-- Page Title -->
            <Label Grid.Column="1" Text="{Binding Title}"
                   VerticalOptions="Center"
                   FontSize="20" FontAttributes="Bold"/>

            <!-- -->
           

            <!-- Trending Button -->
            <Button Grid.Column="3" Text="Trending"
                    Command="{Binding NavigateTrendingCommand}"
                    Style="{StaticResource NavBarButton}" />

            <!-- Trade Button -->
            <Button Grid.Column="4" Text="Trade"
                    Command="{Binding NavigateTradeCommand}"
                    Style="{StaticResource NavBarButton}" />
            
            <!-- Portfolio Button -->
            <Button Grid.Column="5" Text="Portfolio"
                    Command="{Binding NavigatePortfolioCommand}"
                    Style="{StaticResource NavBarButton}" />

            <!-- Account Button -->
            <Button Grid.Column="6" Text="Account"
                    Command="{Binding NavigateAccountCommand}"
                    Style="{StaticResource NavBarButton}" />

            <!-- Admin Button -->
            <Button Grid.Column="7" Text="Admin"
                    Command="{Binding NavigateAdminCommand}"
                    Style="{StaticResource NavBarButton}" />
        </Grid>
    </Grid>
</ContentView>
