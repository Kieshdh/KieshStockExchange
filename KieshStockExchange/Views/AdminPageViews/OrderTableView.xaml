<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KieshStockExchange.Views.AdminPageViews.OrderTableView"  >

    <!-- Labels -->
    <VerticalStackLayout>
        <Grid ColumnDefinitions="2*, 2*, *, *, 2*, *, 2*, *" 
              Style="{StaticResource TableHeaderGrid}" >
            <Label Text="CreatedAt" Grid.Column="0" 
                   Style="{StaticResource TableHeaderLabel}"/>
            <Label Text="Username" Grid.Column="1" 
                   Style="{StaticResource TableHeaderLabel}"/>
            <Label Text="Symbol" Grid.Column="2" 
                   Style="{StaticResource TableHeaderLabel}" />
            <Label Text="OrderType" Grid.Column="3" 
                   Style="{StaticResource TableHeaderLabel}" />
            <Label Text="Price (USD)" Grid.Column="4" 
                   Style="{StaticResource TableHeaderLabel}" />
            <Label Text="Quantity" Grid.Column="5" 
                   Style="{StaticResource TableHeaderLabel}" />
            <Label Text="Total Price" Grid.Column="6" 
                   Style="{StaticResource TableHeaderLabel}" />
            <Label Text="Status" Grid.Column="7" 
                   Style="{StaticResource TableHeaderLabel}" />
        </Grid>

        <!-- CollectionView for displaying Stock data -->
        <CollectionView ItemsSource="{Binding PagedItems}" Margin="10">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="*, 8*, 2*, 3*, 3*, 3"
                          Style="{StaticResource TableRowGrid}">

                        <!-- Content -->
                        <Label Text="{Binding Stock.StockId}" Grid.Column="0" 
                               Style="{StaticResource TableRowLabel}"/>
                        <Label Text="{Binding Stock.CompanyName}" Grid.Column="1" 
                               Style="{StaticResource TableRowLabel}" />
                        <Label Text="{Binding Stock.Symbol}" Grid.Column="2" 
                               Style="{StaticResource TableRowLabel}" />
                        <Label Text="{Binding PriceUSD}" Grid.Column="3" 
                               Style="{StaticResource TableRowLabel}" />
                        <Label Text="{Binding PriceEUR}" Grid.Column="4" 
                               Style="{StaticResource TableRowLabel}" />

                        <!-- Vertical Lines -->
                        <BoxView Grid.Column="0" Style="{StaticResource TableSeparator}"/>
                        <BoxView Grid.Column="1" Style="{StaticResource TableSeparator}" />
                        <BoxView Grid.Column="2" Style="{StaticResource TableSeparator}" />
                        <BoxView Grid.Column="3" Style="{StaticResource TableSeparator}" />
                        <BoxView Grid.Column="4" Style="{StaticResource TableSeparator}" />
                        <BoxView Grid.Column="5" Style="{StaticResource TableSeparator}" />

                        <!-- Horizontal line (bottom of the row) -->
                        <BoxView Style="{StaticResource TableHorizontalSeparator}" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentView>
